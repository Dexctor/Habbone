                          </div>
                          <div className="flex flex-wrap items-center gap-3 text-[0.7rem] font-semibold uppercase text-[color:var(--foreground)]/55">
                            {author ? <span>Par {author}</span> : null}
                            {publishedAt ? <span>Publi? le {publishedAt}</span> : null}
                            {pinned ? (
                              <span className="rounded bg-emerald-400/15 px-2 py-1 text-emerald-200">
                                ?pingl?
                              </span>
                            ) : null}
                            {closed ? (
                              <span className="rounded bg-rose-400/15 px-2 py-1 text-rose-200">
                                Ferm?
                              </span>
                            ) : null}
                          </div>
                        </div>
                        <div className="mt-4 flex w-full justify-end gap-3 text-[0.7rem] font-semibold uppercase text-[color:var(--foreground)]/70 sm:mt-0 sm:w-auto">
                          <Link
                            href={`/forum/topic/${topicId}`}
                            className="rounded-sm bg-[#3c6fff] px-4 py-1 text-white transition hover:bg-[#5c86ff]"
                          >
                            Voir plus
                          </Link>
                        </div>
                      </div>
                    )
                  })
                ) : (
                  <div className="rounded-md border border-dashed border-[color:var(--bg-700)]/60 bg-[color:var(--bg-900)]/35 px-4 py-6 text-center text-xs font-semibold uppercase text-[color:var(--foreground)]/55">
